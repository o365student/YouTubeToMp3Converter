@{
    ViewData["Title"] = "YouTube 轉 MP3";
}

<h2>YouTube 轉 MP3</h2>

<!-- 顯示 ModelState 錯誤 -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@err.ErrorMessage</div>
        }
    </div>
}

<form asp-controller="Home" asp-action="Download" method="post">
    <div class="mb-3">
        <label for="url" class="form-label">YouTube 連結</label>
        <input id="url"
               name="url"
               class="form-control"
               placeholder="https://youtu.be/..."
               required />
    </div>

    <button type="submit" class="btn btn-primary">下載 MP3</button>
</form>
